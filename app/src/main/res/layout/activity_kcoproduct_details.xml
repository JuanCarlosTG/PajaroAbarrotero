<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_fondo"
    android:orientation="vertical"
    tools:context="com.kreativeco.pjaroabarrotero.KCOProductDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/barra_titulos"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/menu_button_products"
            android:background="@drawable/catalogo"/>

        <TextView
            style="@style/CodeFont"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:textSize="25dp"
            android:text="@string/title_product_details"
            />

        <TextView
            style="@style/CodeFont"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:textSize="25dp"
            android:layout_marginTop="12dp"
            android:text="@string/title_productS"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/product_image"
            android:layout_height="380dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#FFA39C"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/product_name"
            android:layout_height="95dp"
            android:textColor="@android:color/black"
            android:background="#ffffff"
            android:editable="false"
            android:textSize="30dp"
            android:text=""
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/title_description"
            android:textColor="@android:color/black"
            android:layout_height="40dp"
            android:editable="false"
            android:background="#ffffff"
            android:textSize="23dp"
            android:text="DescripciÃ³n del producto:"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/product_cap"
                android:textColor="@android:color/black"
                android:background="#ffffff"
                android:textSize="23dp"
                android:editable="false"
                android:text=""
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/product_box"
                android:layout_below="@+id/product_cap"
                android:textColor="@android:color/black"
                android:background="#ffffff"
                android:textSize="23dp"
                android:editable="false"
                android:text=""
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/product_box"
                android:id="@+id/product_min"
                android:textColor="@android:color/black"
                android:background="#ffffff"
                android:textSize="23dp"
                android:editable="false"
                android:text=""
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/product_min"
                android:id="@+id/product_cost"
                android:textColor="@android:color/black"
                android:background="#ffffff"
                android:textSize="23dp"
                android:editable="false"
                android:text=""
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/layout_piker">

            <EditText
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:id="@+id/total_cost"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"
                android:background="@android:color/transparent"
                android:editable="false"

                />

            <EditText
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:id="@+id/cantity"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/number_products"
                android:text="Cantidad"
                android:textSize="20dp"
                android:background="@android:color/transparent"
                android:editable="false"
            />
            <EditText
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:id="@+id/number_products"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/_02campo" />
        </RelativeLayout>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/add_product"
            android:background="@drawable/_09agregar"
            android:onClick="addProducts"/>
    </LinearLayout>

</LinearLayout>