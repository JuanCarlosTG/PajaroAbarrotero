<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_fondo"
    android:orientation="vertical"
    tools:context="com.kreativeco.pjaroabarrotero.KCOProductDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/barra_titulos"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/menu_button_products"
            android:background="@drawable/catalogo"/>

        <TextView
            style="@style/CodeFont"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:textSize="25dp"
            android:text="@string/title_product_details"
            />

        <TextView
            style="@style/CodeFont"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:textSize="25dp"
            android:layout_marginTop="12dp"
            android:text="@string/title_productS"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/product_image"
            android:layout_height="380dp"
            android:background="@drawable/producto01"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#FFA39C"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/product_description"
            android:layout_height="270dp"
            android:background="#ffffff"
            android:textSize="23dp"
            android:text="SHAMPOO X\n\n700 ml\n\nDescripción del producto:\n\nCon Avena y Azúcar Morena. Disfruta de un baño renovante para tu piel usando Palmolive Naturals Avena y Azácar Morena"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/layout_piker">

        </RelativeLayout>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/_09agregar"/>
    </LinearLayout>

</LinearLayout>