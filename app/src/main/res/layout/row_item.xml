    android:padding="5dp">

    <ImageButton android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/text"
        android:padding="5dp"/>
</RelativeLayout>