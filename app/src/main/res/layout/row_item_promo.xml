<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="186dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#FFFFFF">

        <LinearLayout
            style="@style/ll_row"
            android:id="@+id/ll_car">

            <Button
                style="@style/bt_details_and_car"
                android:layout_width="120dp"
                android:id="@+id/bt_details"
                android:text="Ver Detalles"
                android:background="@android:color/white"/>

            <Button
                style="@style/bt_details_and_car"
                android:layout_width="50dp"
                android:id="@+id/bt_car"
                android:background="@drawable/_0000_carrito_gris"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_image"
            android:layout_below="@+id/ll_car">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textSize="20dp"
                android:background="#CF5067"/>
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/bt_product"
                android:layout_alignParentRight="true"
                android:background="@drawable/order01"/>
        </LinearLayout>


        <TextView
            style="@style/tv_product_name"
            android:layout_below="@+id/ll_image"
            android:text="SHAMPOO MAGNAFLEX 700 ml"
            android:id="@+id/tv_product_name"/>

        <LinearLayout
            style="@style/ll_row"
            android:id="@+id/ll_cantity"
            android:layout_below="@id/tv_product_name">

            <TextView
                style="@style/tv_txt_cantity"
                android:id="@+id/tv_cantity_txt"
                android:text="Cant."/>

            <Button
                android:id="@+id/bt_plus"
                style="@style/bt_row_plus_and_minus"
                android:background="@drawable/mas"/>

            <TextView
                style="@style/tv_cantity"
                android:id="@+id/tv_cantity"
                android:text="000"/>

            <Button
                android:id="@+id/bt_minus"
                style="@style/bt_row_plus_and_minus"
                android:background="@drawable/menos"/>

            <TextView
                style="@style/tv_price"
                android:gravity="center"
                android:id="@+id/tv_price"
                android:text="$39.0"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>